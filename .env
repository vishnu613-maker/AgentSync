# ============================================================================
# AgentSync Configuration - .env File
# Copy this as .env and fill in your values
# ============================================================================

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=sqlite:///./data/sqlite/agentsync.db
REDIS_URL=redis://localhost:6379
CHROMA_PERSIST_DIR=./data/chroma

# ============================================================================
# LLM CONFIGURATION
# ============================================================================
LLM_MODE=mock
# OLLAMA_URL=http://localhost:11434
OLLAMA_URL=https://delphine-nondimensioned-kole.ngrok-free.dev
GROQ_API_KEY=

# ============================================================================
# EMAIL CONFIGURATION (Legacy)
# ============================================================================
EMAIL_ADDRESS=
EMAIL_PASSWORD=
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# ============================================================================
# GOOGLE CALENDAR (Legacy)
# ============================================================================
GOOGLE_CREDENTIALS_PATH=./credentials.json

# ============================================================================
# SLACK CONFIGURATION (Legacy)
# ============================================================================
SLACK_BOT_TOKEN=
SLACK_CHANNEL=#agentsync-test

# ============================================================================
# SECURITY
# ============================================================================
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256

# ============================================================================
# AGENT COMMUNICATION SETTINGS
# ============================================================================
AGENT_CONTEXT_TIMEOUT=5.0
ENABLE_AGENT_TO_AGENT_CONTEXT=True
CONTEXT_CACHE_TTL=3600
MAX_CONTEXT_RETRIES=3

# ============================================================================
# ✅ ZAPIER MCP SERVER CONFIGURATION (Phase 6)
# ============================================================================
# Your Zapier MCP Server URL - Get from https://mcp.zapier.com
# Format: https://mcp.zapier.com/api/mcp/s/{SERVER_ID}/mcp
# 
# IMPORTANT: Replace with your actual server URL from Zapier MCP
# Example from screenshots:
# https://mcp.zapier.com/api/mcp/s/MDg1Y2RhZWytNzVkYi00ODI4LTkwYmItOTNlYWI5MzQxNzk3OmNjNmQ2MTMzLWRiZjUtNDU5YS1hYjY3LWJiZTA0Y2FmZjFiMw==/mcp
#
ZAPIER_MCP_SERVER_URL=https://mcp.zapier.com/api/mcp/s/MzA2MDU2NzAtOTZkZC00ZDAzLThjMzUtZWY2ZDRjZGZlMjEyOmFlYWFmN2Y4LWNmMTgtNDk4ZC04M2ZkLWQwYjlkNTY5ZjM1MQ==/mcp

# Zapier API Key (optional - only if needed for authentication)
ZAPIER_API_KEY= 

# ============================================================================
# ZAPIER WEBHOOK URLS (Optional - for webhook-based integration)
# These are alternatives to MCP - kept for backward compatibility
# ============================================================================
ZAPIER_EMAIL_WEBHOOK=
ZAPIER_CALENDAR_WEBHOOK=
ZAPIER_SLACK_WEBHOOK=

# ============================================================================
# ZAPIER MCP SETTINGS
# ============================================================================
ZAPIER_MCP_TIMEOUT=30.0
ZAPIER_MCP_RETRY_ATTEMPTS=3
ZAPIER_MCP_RETRY_DELAY=1.0

# Enable/Disable Zapier MCP for each agent type
ZAPIER_EMAIL_ENABLED=true
ZAPIER_CALENDAR_ENABLED=true
ZAPIER_SLACK_ENABLED=true

# ============================================================================
# LEGACY MCP CONFIGURATION (Deprecated - use Zapier MCP instead)
# ============================================================================
MCP_SERVER_URL=https://mcp.zapier.com/api/mcp/s/default/mcp
MCP_AUTH_TOKEN=
MCP_TIMEOUT=30.0
MCP_EMAIL_SERVICE=gmail
MCP_CALENDAR_SERVICE=google-calendar
MCP_SLACK_WORKSPACE=
MCP_ENABLE_EMAIL_AGENT=true
MCP_ENABLE_CALENDAR_AGENT=true
MCP_ENABLE_SLACK_AGENT=true













